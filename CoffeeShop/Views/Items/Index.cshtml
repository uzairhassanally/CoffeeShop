                                        <td>
                                            @Html.DisplayNameFor(model => model.Producer.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Category.Name)
