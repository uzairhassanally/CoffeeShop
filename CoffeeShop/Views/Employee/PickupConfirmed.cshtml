@model CoffeeShop.Models.Order


<head>
    <style>
        input[type=submit] {
            background-color: #1be984;
            border-block-end-style: dotted;
            color: white;
            padding: 16px 32px;
            text-decoration: none;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>


@using (Html.BeginForm("PickupConfirmed", "Employee", FormMethod.Post))
{


    <p>
        @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </p>


    <div>
        <p>
            @Html.HiddenFor(Model => Model.Username)
        </p>

    </div>


    <input type="submit" value="Pick Up Confirmed" />

}


