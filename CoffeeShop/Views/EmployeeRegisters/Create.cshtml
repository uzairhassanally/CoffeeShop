                    @Html.DropDownList("Role", new List<SelectListItem> {

                     new SelectListItem{Text="Cashier",Value ="Cashier"},
                     new SelectListItem{Text="Barista",Value ="Barista"},
                       new SelectListItem{Text="Baker",Value ="Baker"},
                     new SelectListItem{Text="Cleaner",Value ="Cleaner"},
                       new SelectListItem{Text="Store Supervisor",Value ="Store Supervisor"},


               })
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
