                    @Html.DropDownList("Amount", new List<SelectListItem> {

                     new SelectListItem{Text="Cashier",Value ="50"},
                     new SelectListItem{Text="Barista",Value ="60"},
                       new SelectListItem{Text="Baker",Value ="65"},
                     new SelectListItem{Text="Cleaner",Value ="35"},
                       new SelectListItem{Text="Store Supervisor",Value ="80"},


               })
